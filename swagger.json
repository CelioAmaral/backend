{
    "swaggerDefinition": {
        "info": {
            "description": "This is a sample server",
            "title": "Swagger",
            "version": "1.0.0"
        },
        "host": "localhost:4000",
        "basePath": "/v1",
        "produces": [
            "application/json"
        ],
        "schemes": ["http", "ws"],
        "securityDefinitions": {
            "JWT": {
                "type": "apiKey",
                "in": "header",
                "name": "Authorization",
                "description": "Bearer <token>"
            }
        }
    },
    "files": ["./routes/**/*.js", "./models/**/*.js"]
}